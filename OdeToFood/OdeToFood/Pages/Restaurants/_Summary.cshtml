@using OdeToFood.Core

@model Restaurant

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn bt-lg"
           asp-page="./Detail" asp-route-id="@Model.RestaurantId">
            <i class="fa fa-search-plus"></i>
        </a>
        <a class="btn bt-lg"
           asp-page="./Edit" asp-route-id="@Model.RestaurantId">
            <i class="fa fa-pencil-alt"></i>
        </a>
        <a class="btn bt-lg"
           asp-page="./Delete" asp-route-id="@Model.RestaurantId">
            <i class="fa fa-trash"></i>
        </a>
    </div>
</div>